<h1>New Advertisement</h1>

<div class="row">
  <div class="col-md-4">
    <p>Guidelines for ads</p>
    <ul>
      <li>Iambic pantameter required.</li>
      <li>Alternative spelling encouraged.</li>
      <li>Unsupported claims forbidden.</li>
    </ul>
  </div>
  <div class="col-md-8">
    <%= form_for @advertisement do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control', placeholder: "Enter title" %>
      </div>
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter body" %>
      </div>
      <div class="form-group">
        <%= f.submit "Save", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>
